<phpunit bootstrap="vendor/autoload.php"
         colors="true">
    <testsuites>
        <testsuite name="tests">
            <directory suffix=".php">tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>classes</directory>
            <directory>database</directory>
        </whitelist>
    </filter>
</phpunit>
